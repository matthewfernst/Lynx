{
    "name": "lynx-api",
    "version": "1.0.0",
    "description": "A lambda to query slopes data in S3",
    "repository": "https://github.com/matthewfernst/Lynx-Companion-App",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf cdk.out coverage dist",
        "checkFormat": "prettier --check \"graphql/**/*.ts\" \"infrastructure/**/*.ts\"",
        "format": "prettier --write \"graphql/**/*.ts\" \"infrastructure/**/*.ts\"",
        "lint": "eslint \"graphql/**/*.ts\" \"infrastructure/**/**/*.ts\"",
        "types": "tsc --noEmit",
        "generate-resolvers": "ts-node scripts/code-gen/generateResolvers.ts",
        "generate": "concurrently -c \"auto\" \"npm:generate-*\"",
        "build": "npm run generate && npm run types && NODE_ENV=production node esbuild.mjs",
        "start-code-watch": "node esbuild.mjs",
        "start-server": "sleep 3 && nodemon --inspect --inspect-publish-uid=http --exitcrash dist/graphql/index.js",
        "start": "concurrently -c \"auto\" -k \"npm:start-*\"",
        "bootstrap": "cdk bootstrap",
        "deploy": "cdk deploy --require-approval=never --all"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@faker-js/faker": "^9.3.0",
        "@smithy/types": "^3.7.2",
        "@tsconfig/node18": "^18.2.4",
        "@types/aws-lambda": "^8.10.146",
        "@types/convert-units": "^2.3.11",
        "@types/crypto-js": "^4.2.2",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.10.2",
        "@types/unzipper": "^0.10.10",
        "@types/uuid": "^10.0.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^8.19.0",
        "aws-cdk": "2.173.4",
        "concurrently": "^9.1.2",
        "esbuild": "0.24.2",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "nodemon": "^3.1.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.19.0"
    },
    "dependencies": {
        "@apollo/server": "^4.11.2",
        "@as-integrations/aws-lambda": "^3.1.0",
        "@aws-sdk/client-dynamodb": "^3.716.0",
        "@aws-sdk/client-s3": "^3.717.0",
        "@aws-sdk/lib-dynamodb": "^3.716.0",
        "@aws-sdk/lib-storage": "^3.717.0",
        "@aws-sdk/s3-request-presigner": "^3.717.0",
        "@graphql-tools/graphql-file-loader": "^8.0.9",
        "@graphql-tools/load": "^8.0.10",
        "@smithy/node-http-handler": "^3.3.3",
        "apple-signin-auth": "^1.7.8",
        "aws-cdk-lib": "2.173.4",
        "aws-xray-sdk-core": "^3.10.2",
        "axios": "^1.7.9",
        "constructs": "^10.4.2",
        "convert-units": "^2.3.4",
        "crypto-js": "^4.2.0",
        "dataloader": "^2.2.3",
        "dotenv": "^16.4.7",
        "esbuild-plugin-glob-import": "^0.2.0",
        "glob": "^11.0.0",
        "google-auth-library": "^9.15.0",
        "graphql": "^16.10.0",
        "jsonwebtoken": "^9.0.2",
        "luxon": "^3.5.0",
        "source-map-support": "^0.5.21",
        "unzipper": "^0.12.3",
        "uuid": "^11.0.3",
        "xml2js": "^0.6.2"
    },
    "nodemonConfig": {
        "execMap": {
            "js": "node --enable-source-maps"
        },
        "watch": [
            "dist/graphql"
        ],
        "events": {
            "start": "cls || clear"
        },
        "ext": "js,graphql"
    }
}
