{
    "name": "lynx-api",
    "version": "1.0.0",
    "description": "A lambda to query slopes data in S3",
    "repository": "https://github.com/matthewfernst/Lynx-Companion-App",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf cdk.out coverage dist",
        "checkFormat": "prettier --check \"graphql/**/*.ts\" \"infrastructure/**/*.ts\"",
        "format": "prettier --write \"graphql/**/*.ts\" \"infrastructure/**/*.ts\"",
        "lint": "eslint \"graphql/**/*.ts\" \"infrastructure/**/**/*.ts\"",
        "types": "tsc --noEmit",
        "generate-resolvers": "ts-node scripts/code-gen/generateResolvers.ts",
        "generate": "concurrently -c \"auto\" \"npm:generate-*\"",
        "build": "npm run generate && npm run types && NODE_ENV=production node esbuild.mjs",
        "start-code-watch": "node esbuild.mjs",
        "start-server": "sleep 3 && nodemon --inspect --inspect-publish-uid=http --exitcrash dist/graphql/index.js",
        "start": "concurrently -c \"auto\" -k \"npm:start-*\"",
        "bootstrap": "cdk bootstrap",
        "deploy": "cdk deploy --require-approval=never --all"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@faker-js/faker": "^10.1.0",
        "@smithy/types": "^4.9.0",
        "@types/aws-lambda": "^8.10.159",
        "@types/convert-units": "^2.3.12",
        "@types/crypto-js": "^4.2.2",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/luxon": "^3.7.1",
        "@types/node": "^24.10.1",
        "@types/unzipper": "^0.10.11",
        "@types/uuid": "^11.0.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^8.48.1",
        "aws-cdk": "^2.1033.0",
        "concurrently": "^9.2.1",
        "esbuild": "0.27.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "nodemon": "^3.1.11",
        "prettier": "^3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    },
    "dependencies": {
        "@apollo/server": "^5.2.0",
        "@as-integrations/aws-lambda": "^4.0.1",
        "@aws-cdk/aws-servicecatalogappregistry-alpha": "^2.232.1-alpha.0",
        "@aws-sdk/client-dynamodb": "^3.946.0",
        "@aws-sdk/client-s3": "^3.946.0",
        "@aws-sdk/lib-dynamodb": "^3.946.0",
        "@aws-sdk/lib-storage": "^3.946.0",
        "@aws-sdk/s3-request-presigner": "^3.946.0",
        "@graphql-tools/graphql-file-loader": "^8.1.8",
        "@graphql-tools/load": "^8.1.7",
        "@smithy/node-http-handler": "^4.4.5",
        "@tsconfig/node22": "^22.0.5",
        "apple-signin-auth": "^2.0.0",
        "aws-cdk-lib": "2.232.1",
        "aws-xray-sdk-core": "^3.12.0",
        "axios": "^1.13.2",
        "constructs": "^10.4.3",
        "convert-units": "^2.3.4",
        "crypto-js": "^4.2.0",
        "dataloader": "^2.2.3",
        "dotenv": "^17.2.3",
        "esbuild-plugin-glob-import": "^0.2.0",
        "glob": "^13.0.0",
        "google-auth-library": "^10.5.0",
        "graphql": "^16.12.0",
        "jsonwebtoken": "^9.0.3",
        "luxon": "^3.7.2",
        "source-map-support": "^0.5.21",
        "unzipper": "^0.12.3",
        "uuid": "^13.0.0",
        "xml2js": "^0.6.2"
    },
    "nodemonConfig": {
        "execMap": {
            "js": "node --enable-source-maps"
        },
        "watch": [
            "dist/graphql"
        ],
        "events": {
            "start": "cls || clear"
        },
        "ext": "js,graphql"
    }
}
